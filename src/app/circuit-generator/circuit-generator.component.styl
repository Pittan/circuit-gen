$main-color=#ffb74d

.dialog-container
  background-color rgba(0,0,0,0.7)
  position fixed
  top 0
  left 0
  height 100%
  width 100%

.editor-dialog
  background-color #ffffff
  border-radius 5px
  width 90%

  .header
    height 40px
    width 100%
    display flex
    align-items center
    justify-content center
    background-color $main-color
    color #ffffff
    position relative
    border-top-left-radius 5px
    border-top-right-radius 5px

    .label
      font-size 18px

    .close-button
      height 20px
      width 20px
      border-radius 5px
      color $main-color
      position absolute
      right 10px
      top 10px
      background-color #ffffff
      cursor pointer
      font-size 16px

      &:hover
        opacity .8

  .body
    display flex
    padding 20px
    color #616161

    .canvas-column
      flex none
      width 500px

    .tools-column
      flex 1
      margin-left 20px

      .label
        margin-top 10px

        &:first-child
          margin-top 0

      .row
        display flex
        flex-wrap wrap
        justify-content space-between
        padding-bottom 10px
        border-bottom 1px solid #e0e0e0

        .button
          width 90px
          margin-top 5px

          &:not(:first-child)
            margin-left 10px

        .add-button
          margin-top 10px


.button
  height 40px
  width 200px
  background-color $main-color
  border-radius 5px
  color #ffffff
  font-size 14px
  cursor pointer

  &:hover
    opacity .8

  &.save
    margin 0 auto 20px

  &.disabled
    background-color #e0e0e0
    pointer-events none
    cursor default

.canvas
  height 400px
  width 400px


.add-button
  flex-direction column
  background-color $main-color
  border-radius 5px
  color #ffffff
  font-size 12px
  cursor pointer
  height 150px
  width 150px

  &:hover
    opacity .8

  .ichigo-jam
    width 80%

  .led
    height 60%

  .label
    margin-top 10px
