.main-content
  padding: 0.5em 1em
  background: #ffdcb0/*背景色*/

  .main-title
    font-size 20px
    font-weight bold
    margin-bottom 10px

  .contents
    display flex

    .elements-container
      flex 1
      padding 0 10px 0 0

      .input-container
        padding 5px
        background-color white
        border 1px solid #e0e0e0
        border-radius 5px
        display flex
        align-items center
        position relative
        margin-left 10px

        .text-input
          height 20px
          width 100%
          -webkit-appearance none
          border none
          font-size 16px
          flex 1
          margin 0 5px
          line-height 20px

    .circuit-container
      flex none
      width 400px

      .circuit-diagram
        height 400px
        width 400px
        border 1px solid #e0e0e0
        background-size contain
        background-repeat no-repeat
        background-position center
        background-color #ffffff

      .button
        width 100%
        height 40px
        color #ffffff
        background-color #ffb74d
        border-radius 5px
        cursor pointer
        margin-top 10px

        &:hover
          opacity .8

  .method-list
    display flex
    flex-wrap wrap
    justify-content flex-start


  .method-container
    border 1px solid #e0e0e0
    border-radius 5px
    background-color #ffffff
    margin-top 10px
    width 460px
    flex none
    margin-left 10px

    .title
      margin-left 15px
      &:first-letter
        color: #ffae43

    .input-container
      padding 5px
      background-color white
      border 1px solid #e0e0e0
      border-radius 5px
      display flex
      align-items center
      position relative
      margin 10px

      .text-input
        height 20px
        width 100%
        -webkit-appearance none
        border none
        font-size 16px
        flex 1
        margin 0 5px
        line-height 20px

        &.area
          height 200px



ul
  list-style: none

label
  margin-right: 10px
  width:100px
  float: left

.input-label
  margin-top 10px
  font-size 18px
  &:first-letter
    color: #ffae43



.elements
  margin-bottom 5px

.add-button-container
  width 100%
  display flex
  align-items center
  justify-content flex-end
  margin-top 10px

  .add-button
    height 40px
    width 80px
    background-color #ffb74d
    color #ffffff
    border-radius 5px
    cursor pointer

    &:hover
      opacity .8

    .plus
      font-weight bold
      font-size 20px
      margin-bottom 2px
      margin-right 2px

.send-button
  height 40px
  width 100%
  background-color #ffb74d
  color #ffffff
  border-radius 5px
  cursor pointer
  border none
  font-size 16px
  margin 15px auto

  &:hover
    opacity .8

.thumbnail
  display inline-block
  height 40px
  width 40px
  border 1px solid #e0e0e0
  background-size contain
  background-repeat no-repeat
  background-position center